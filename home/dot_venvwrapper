# for virtualenvwrapper
PYENV_VENV_WRAPPER=`which pyenv-virtualenvwrapper`

if [ -n ${PYENV_VENV_WRAPPER} ]; then
    echo "pyenv virtualenvwrapper"
    pyenv virtualenvwrapper # virtualenvwrapper_lazy
else
    echo "virtualenvwrapper"
    PYTHON3=~/.pyenv/versions/3.7.11/bin/
    export WORKON_HOME=$HOME/.virtualenvs
    export PROJECT_HOME=$HOME/projects
    export VIRTUALENVWRAPPER_PYTHON=$PYTHON3/python3
    export VIRTUALENVWRAPPER_SCRIPT=$PYTHON3/virtualenvwrapper.sh
    . $PYTHON3/virtualenvwrapper_lazy.sh
fi
